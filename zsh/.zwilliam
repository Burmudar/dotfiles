# User configuration
alias h='cd $HOME'
if [[ $OSTYPE == "darwin"* ]]; then
    export TOOLS="$HOME/programming/tools"
    export PATH="/usr/local/share/python:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"
    export GOROOT=/usr/local/opt/go/libexec
    export PATH=$PATH:$GOROOT/bin
else
    export SRC="$HOME/programming"
    export GOPATH="$SRC/golang"
    export GOBIN="$GOPATH/bin"

    export PATH="$PATH:$GOROOT/bin"
    export PATH="$PATH:$GOBIN"
fi

# correct locale
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
# nice terminal colours
export TERM=xterm-256color


# aliases
alias aenv='source $(find . -name "activate")'
alias denv='deactivate'

# github.com/bhilburn/powerlevel9k
POWERLEVEL9K_PROMPT_ON_NEWLINE=true
POWERLEVEL9K_RIGHT_PROMPT_ELEMENTS=(status root_indicator background_jobs history time virtualenv)

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion
    export GRADLE_HOME="$TOOLS/gradle"
    export PATH="$PATH:$GRADLE_HOME/bin"
# Preferred editor for local and remote sessions
if [[ -n $SSH_CONNECTION ]]; then
   export EDITOR='vi'
else
   export EDITOR='vi'
fi

export TERM=xterm-256color
# Work config
export RUNLOCAL_LOCATION='ZA'
export CONTROLPLANE="$HOME/programming/compute-controlplane"
export FARM="$HOME/programming/compute-farm"
export PATH="$PATH:$FARM"
export http_proxy=http://www-proxy-ukc1.uk.oracle.com:80
export https_proxy=http://www-proxy-ukc1.uk.oracle.com:80
export no_proxy=".nimbula.org"
export REVIEWERS="david.ellefsen@oracle.com,bryn.divey@oracle.com,ben.meier@oracle.com,david.maclay@oracle.com,ferdi.redelinghuys@oracle.com,vincent.geddes@oracle.com,lucas.dreyer@oracle.com,atle.jorgensen@oracle.com"

alias gtc='cd $CONTROLPLANE'
alias gtf='cd $FARM'
alias cf='compute-farm'
alias aenv='source $(find . -name "activate")'
alias denv='deactivate'

if type "tmux-next" &> /dev/null; then
    alias tmux='tmux-next' #tmux installed from ppa named its binary tmux-next
fi

source "$FARM/bash_completion"
