pj () {
    QUERY=${1:-''}

    if [ ! -z ${QUERY} ]
    then
        echo $QUERY
        cd $SRC/$(ls $SRC | peco --select-1 --query $QUERY --prompt 'project:')
    else
        cd $SRC/$(ls $SRC | peco --prompt 'project:')
    fi
}

gitb () {
    QUERY=${1:-''}
    PROMPT="branch:"
    BRANCH=""

    BRANCHES=$(git branch -a | sed -n -e 's/remotes\/origin\///p')

    if [ ! -z ${QUERY} ]
    then
        echo $QUERY
        BRANCH=$(echo ${BRANCHES} | peco --select-1 --query ${QUERY} --prompt ${PROMPT})
    else
        BRANCH=$(echo ${BRANCHES} | peco --prompt ${PROMPT})
    fi

    git checkout $(echo -e "${BRANCH}" | tr -d '[:space:]')
}

kubesw () {
    QUERY=${1:-''}

    if [ ! -z ${QUERY} ]
    then
        ln -s $(find $HOME/.kube/ -name "*-config" -type f | peco --select-1 --query $QUERY --prompt 'config:') $HOME/.kube/config
    else
        ln -s $(find $HOME/.kube/ -name "*-config" -type f | peco --prompt 'config:') $HOME/.kube/config
    fi

    ls -l $HOME/.kube/config
}

_ensure_ssh_agent_running() {
    if ! pgrep ssh-agent > /dev/null; then
        ssh-agent -s
    fi
}

load_keys () {
    _ensure_ssh_agent_running
    FOLDER=${1:-$SSH_KEY_FOLDER}

    AUTH_SOCK=$(env | grep SSH_AUTH_SOCK | sed s/SSH_AUTH_SOCK=//)
    AGENT_PID=$(env | grep SSH_AGENT_PID | sed s/SSH_AGENT_PID=//)

    eval `SSH_AUTH_SOCK="${AUTH_SOCK}"`
    eval `SSH_AGENT_PID="${AGENT_PID}"`


    for k in ${FOLDER}/*.pvt
    do
        ssh-add "$k"
    done
}

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# Setup environment by executing funcs
load_keys
